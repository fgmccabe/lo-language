'.source.lo':
  'DCG':
    'prefix': 'dcg'
    'body': '${1:clause} --> ${0:body}.'
  'Fact':
    'prefix': 'fact'
    'body': '${1:pred}(${2:argument}).'
  'Rule':
    'prefix': 'rule'
    'body': '${1:pred}(${2:argument}) :-\n\t${0:%% body}'
  'Type':
    'prefix':'type'
    'body' : 'type ${1:type_name}[${2:args}] ::= ${3:constructors}'
  'VarDecl':
    'prefix' : 'var'
    'body': '${1:variable} : ${2:type}.'
